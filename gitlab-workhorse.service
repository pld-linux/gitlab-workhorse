[Unit]
Description=GitLab Workhorse
After=gitlab-ce-puma.service
PartOf=gitlab-ce.target

[Service]
Type=simple
User=git
Group=git
WorkingDirectory=/usr/lib/gitlab
ExecStart=/usr/sbin/gitlab-workhorse -listenUmask 0 -listenNetwork unix -listenAddr /var/run/gitlab/gitlab-workhorse.socket -authBackend http://127.0.0.1:8080 -authSocket /var/run/gitlab/gitlab.socket
Restart=on-failure

[Install]
WantedBy=multi-user.target
